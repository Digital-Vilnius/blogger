<form class="form" method="post" novalidate>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.title) }}
        </div>
        <div class="col-6">
            {{ form_row(form.tags) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.visible) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.summary) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.content) }}
        </div>
    </div>
    <div class="button-row">
        <a class="button secondary" href="{{ path('blog posts', {blogId: blog.id}) }}">{{ 'back' | trans }}</a>
        <button class="button primary" type="submit">{{ 'save' | trans }}</button>
    </div>
    {{ form_row(form._token) }}
</form>