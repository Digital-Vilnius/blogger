{% extends 'admin/base.html.twig' %}
{% set title = 'posts' | trans %}
{% set header_active = 'posts' %}
{% set colspan = 6 %}

{% block additional_header %}
    <a class="button primary" href="{{ path('admin post add') }}">{{ 'add_post' | trans }}</a>
{% endblock %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
            <th class="sortable center small">{{ 'id' | trans }}</th>
            <th class="sortable">{{ 'title_and_summary' | trans }}</th>
            <th class="sortable">{{ 'tags' | trans }}</th>
            <th class="sortable center">{{ 'updated' | trans }}</th>
            <th class="sortable center">{{ 'created' | trans }}</th>
            <th class="center">{{ 'actions' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td class="center">{{ post.id }}</td>
                <td>
                    <h3>{{ post.title }}</h3>
                    <p>{{ post.summary }}</p>
                </td>
                <td class="ellipsis"><div>{{ post.tags | join(', ') }}</div></td>
                <td class="center">{{ post.updated | dateTimeFormat }}</td>
                <td class="center">{{ post.created | dateTimeFormat }}</td>
                <td class="center">
                    <div class="table-actions">
                        <a title="{{ 'edit' | trans }}" href="{{ path('admin post edit', {id: post.id}) }}"><i class="material-icons">create</i></a>
                        <a title="{{ 'delete' | trans }}" href="{{ path('admin', {id: post.id}) }}"><i class="material-icons">delete</i></a>
                    </div>
                </td>

            </tr>
        {% endfor %}
        {% if posts | length == 0 %}
            <tr>
                <td class="no-data" colspan="{{ colspan }}">{{ 'no_data' | trans }}</td>
            </tr>
        {% endif %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="{{ colspan }}">
                <div class="paging-container">
                    <div class="count">{{ 'count' | trans }} : <b>{{ postsCount }}</b></div>
                    {% include 'shared/includes/paging.html.twig' %}
                </div>
            </td>
        </tr>
        </tfoot>
    </table>
{% endblock %}