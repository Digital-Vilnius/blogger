{% extends 'admin/base.html.twig' %}
{% set title = 'users' | trans %}
{% set colspan = 7 %}
{% set header_active = 'users' %}

{% block additional_header %}
    <a class="button primary" href="{{ path('admin user add') }}">{{ 'add_user' | trans }}</a>
{% endblock %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
            <th class="sortable center small">{{ 'id' | trans }}</th>
            <th class="sortable">{{ 'email' | trans }}</th>
            <th class="sortable">{{ 'roles' | trans }}</th>
            <th class="sortable">{{ 'api_token' | trans }}</th>
            <th class="sortable center">{{ 'updated' | trans }}</th>
            <th class="sortable center">{{ 'created' | trans }}</th>
            <th class="center">{{ 'actions' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="center">{{ user.id }}</td>
                <td class="ellipsis"><div>{{ user.email }}</div></td>
                <td class="ellipsis"><div>{{ user.roles | join(', ') }}</div></td>
                <td>{{ user.apiToken }}</td>
                <td class="center">{{ user.updated | dateTimeFormat }}</td>
                <td class="center">{{ user.created | dateTimeFormat }}</td>
                <td class="center">
                    <div class="table-actions">
                        <a title="{{ 'edit' | trans }}" href="{{ path('admin user edit', {id: user.id}) }}"><i class="material-icons">create</i></a>
                        <a title="{{ 'delete' | trans }}" href="{{ path('admin', {id: user.id}) }}"><i class="material-icons">delete</i></a>
                    </div>
                </td>

            </tr>
        {% endfor %}
        {% if users | length == 0 %}
            <tr>
                <td class="no-data" colspan="{{ colspan }}">{{ 'no_data' | trans }}</td>
            </tr>
        {% endif %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="{{ colspan }}">
                <div class="paging-container">
                    <div class="count">{{ 'count' | trans }} : <b>{{ usersCount }}</b></div>
                    {% include 'shared/includes/paging.html.twig' %}
                </div>
            </td>
        </tr>
        </tfoot>
    </table>
{% endblock %}